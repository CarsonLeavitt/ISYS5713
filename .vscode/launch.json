    "version": "0.2.0",
    "configurations": [
    {
        "name": "Launch Edge",
        "request": "launch",
        "type": "msedge",
        "url": "http://localhost:8080",
        "webRoot": "/examples/index.html"
    },

        
        {
            "name": "Python: Attach using Process Id",
            "type": "python",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": true
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "examples.basic-flask",
            "env": {
                "FLASK_APP": "basic-flask",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                // "run",
                // "--no-debugger",
                // "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Adv Flask",
            "type": "python",
            "request": "launch",
            "module": "examples.advanced-flask",
            "env": {
                "FLASK_APP": "advanced-flask",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                // "run",
                // "--no-debugger",
                // "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args":[
                "examples.fastapi-example:app",
                "--reload",
                "--port",
                "5000"
            ],
            "env":
            {
                "PYDEVD_DISABLE_FILE_VALIDATION":"1",                
            },
            "jinja": true
            
        },
    ]
}